<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team7.cmput301.android.theirisproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />
    <application
        android:name=".IrisProjectApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- User Activities -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />

        <!-- Problem Activities -->
        <activity android:name=".activity.ProblemListActivity"></activity>
        <activity
            android:name=".activity.AddProblemActivity"
            android:label="@string/create_a_problem"
            android:parentActivityName=".activity.ProblemListActivity"></activity>
        <activity android:name=".activity.ViewProblemActivity"></activity>
        <activity android:name=".activity.AddProblemActivity" />
  
        <!-- Record Activities -->
        <activity android:name=".activity.RecordListActivity"></activity>
            android:theme="@style/AppTheme.NoActionBar" />
            android:label="@string/record_list_activity_title" />
        <activity
            android:name=".activity.AddRecordActivity"
            android:label="@string/title_activity_add_record"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.ViewRecordActivity"
            android:label="@string/title_activity_view_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.EditProblemActivity"></activity>
    </application>

</manifest>